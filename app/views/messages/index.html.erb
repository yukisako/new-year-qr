<%= form_for(Message.new) do |f| %>
  <% if @message.errors.present? %> <div class="alert alert-danger">
    <%= alert %>
    <ul>
      <% @message.errors.full_messages.each do |full_message| %>
        <li>
          <%= full_message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

  名前(10文字以内):
<br>
<%= f.text_field :name %>
<br>
  内容(32文字以内):
<br>
<%= f.text_area :body %>
<br>
<%= f.submit("Create QR", class: "btn btn-sm btn-primary") %>




<% end %>

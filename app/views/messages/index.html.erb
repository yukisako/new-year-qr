<h1>メッセージ一覧</h1>
<% @messages.each do |message| %>
  名前:
<%= message.name %>
  内容:
<%= message.body %>
  <br>
<% str = message.body + "\n" + message.name + "さんからのメッセージです" %>
<% str_jis = str.encode("Shift_JIS") %>
<% qr = RQRCode::QRCode.new( str_jis, :size => 10, :level => :h ).to_img %>

<% qr.resize(200, 200).save("app/assets/images/test.png") %>
<% end %>

<%= image_tag 'test.png' %>


<br>
<%= form_for(Message.new) do |f| %>
  名前:
<%= f.text_field :name %>

  内容:
<%= f.text_field :body %>
<%= f.submit %>

<% end %>

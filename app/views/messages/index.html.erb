<div class="panel panel-default">
  <div class="panel-heading">
    最近作成されたメッセージ一覧
  </div>

  <div class="panel-body">
    <% num = @size < 11 ? @size+1 : 10 %> 
    <% num.times do |i| %>
      <span class="label label-info"><%= @messages[@size-i].name %></span> <%= @messages[@size-i].body %>
      <br>
    <% end %>
  </div>

</div>

